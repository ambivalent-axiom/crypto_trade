{% include 'header.html.twig' %}
<body>
{% include 'menu.html.twig' %}
<h1>Currency List</h1>

<div class="container">
    <div>
        <table class="styled-table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Symbol</th>
                <th>Price USD</th>
            </tr>
            </thead>
            <tbody>
            {% for currency in currencies %}
                <tr>
                    <td>{{ currency.name }}</td>
                    <td>{{ currency.symbol }}</td>
                    <td>{{ currency.price|number_format(8, '.', '') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
        <div class="well">
            <form id="buy" action="" method="post" enctype="multipart/form-data">
                <label for="buy">Symbol:</label>
                <input type="text" name="symbol">
                <label for="buy">For how much USD?:</label>
                <input type="text" name="amount">
                <input class="btn" type="submit" name="buy" value="Buy">
            </form>
        </div>
        <div class ="well">
            <form id="search" action='show' method="post" enctype="multipart/form-data">
                <label for="search">Search:</label>
                <input type="text" name="symbol">
                <input name="Search" class="btn" value="Search" type="submit" >
            </form>
        </div>
    </div>
</div>
</body>
</html>