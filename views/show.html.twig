{% include 'header.html.twig' %}
<body>
{% include 'menu.html.twig' %}
<h1>Search results</h1>
<table border="0">
    <thead>
    <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Price USD</th>
    </tr>
    </thead>
    <tbody>
    {% for currency in currencies %}
        <tr>
            <td>{{ currency.getName() }}</td>
            <td>{{ currency.getSymbol() }}</td>
            <td>{{ currency.getPrice()|number_format(8, '.', '') }} </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</body>
</html>